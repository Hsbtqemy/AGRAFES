{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability set for Concordancier",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "multicorpus",
          "cmd": "multicorpus",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "multicorpus",
          "cmd": "multicorpus",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "fs:default",
    "fs:scope-app-recursive",
    "dialog:default",
    "dialog:allow-open",
    "core:path:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:*"
        },
        {
          "url": "http://127.0.0.1:*/*"
        }
      ]
    }
  ]
}